{
  "manifest_version": 3,
  "name": "WPP CRM Fusion - Supabase Edition",
  "version": "3.1.0",
  "permissions": [
    "storage",
    "identity",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_end",
      "world": "ISOLATED"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "wppconnect-wa.js",
        "src/inject/wpp-bridge.js",
        "crm_logic.js"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
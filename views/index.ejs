<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MateChat - Conexión de WhatsApp</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .status-button {
            display: inline-block;
            padding: 10px 15px;
            border-radius: 25px;
            font-weight: bold;
            cursor: pointer;
            margin-left: 10px;
            transition: all 0.3s ease;
        }
        .connected {
            background-color: #25D366;
            color: white;
        }
        .disconnected {
            background-color: #E60023;
            color: white;
        }
        .button {
            display: inline-block;
            padding: 12px 25px;
            background-color: #25D366;
            color: white;
            text-decoration: none;
            border-radius: 25px;
            font-weight: bold;
            margin-top: 20px;
            transition: all 0.3s ease;
        }
        .button:hover {
            background-color: #128C7E;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        #connection-success {
            text-align: center;
            padding: 30px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        .loading-spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(0,0,0,0.1);
            border-radius: 50%;
            border-top-color: #25D366;
            animation: spin 1s ease-in-out infinite;
            margin-right: 10px;
            vertical-align: middle;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>MateChat</h1>
            <h2>Conexión de WhatsApp</h2>
        </header>
        
        <main>
            <div class="whatsapp-connect">
                <div id="whatsapp-status">
                    <p>Estado: <span id="connection-status" class="status-button disconnected">Desconectado</span></p>
                </div>
                
                <div id="qrcode-container">
                    <h3>Escanea el código QR con WhatsApp para conectar</h3>
                    <div id="qrcode">
                        <p><span class="loading-spinner"></span> Cargando código QR...</p>
                    </div>
                    <p class="instructions">
                        1. Abre WhatsApp Business en tu teléfono<br>
                        2. Toca en Menú o Ajustes y selecciona WhatsApp Web<br>
                        3. Apunta tu teléfono hacia esta pantalla para capturar el código
                    </p>
                </div>
                
                <div id="connection-success" style="display: none;">
                    <h3>¡WhatsApp Conectado!</h3>
                    <p>Tu WhatsApp está ahora conectado a MateChat.</p>
                    <a href="/chat" class="button">Ir a la Interfaz de Chat</a>
                </div>
            </div>
        </main>
        
        <footer>
            <p>&copy; 2025 MateChat - Integración de WhatsApp</p>
        </footer>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const qrcodeElement = document.getElementById('qrcode');
        const connectionStatus = document.getElementById('connection-status');
        const qrcodeContainer = document.getElementById('qrcode-container');
        const connectionSuccess = document.getElementById('connection-success');

        // Manejar la recepción del código QR
        socket.on('qrCode', (qrCodeDataUrl) => {
            console.log("Código QR recibido del servidor");
            // Usar una imagen con estilos especiales
            qrcodeElement.innerHTML = `
                <div style="display: flex; justify-content: center; align-items: center; margin: 20px 0;">
                    <img src="${qrCodeDataUrl}" alt="WhatsApp QR Code" style="max-width:250px; border: 8px solid white; box-shadow: 0 0 10px rgba(0,0,0,0.2);">
                </div>
                <p style="text-align: center; font-weight: bold; color: #075e54;">Escanea este código con WhatsApp Business</p>
            `;
        });
        
        // Solicitar explícitamente el código QR al conectar
        socket.on('connect', () => {
            console.log("Socket conectado, solicitando estado actual");
            // El servidor enviará el QR si está disponible
        });

        // Manejar el estado de WhatsApp
        socket.on('whatsappStatus', (data) => {
            console.log("Cambio de estado de WhatsApp:", data);
            
            if (data.status === 'connected') {
                updateWhatsAppStatus(true);
            } else if (data.status === 'disconnected') {
                updateWhatsAppStatus(false);
            } else if (data.status === 'regenerating') {
                // Mostrar estado de regenerando QR
                connectionStatus.textContent = 'Regenerando QR';
                connectionStatus.className = 'status-button disconnected';
                qrcodeContainer.style.display = 'block';
                connectionSuccess.style.display = 'none';
                
                // Mostrar mensaje de espera
                qrcodeElement.innerHTML = `
                    <p style="text-align: center;">
                        <span class="loading-spinner"></span> Inicializando nuevo WhatsApp...
                    </p>
                    <p style="text-align: center; font-size: 0.9em; color: #666;">
                        Esto puede tardar unos momentos. Por favor espera.
                    </p>
                `;
            } else if (data.status === 'error') {
                // Mostrar mensaje de error
                connectionStatus.textContent = 'Error';
                connectionStatus.className = 'status-button disconnected';
                
                qrcodeElement.innerHTML = `
                    <p style="text-align: center; color: #E60023;">
                        <span style="font-size: 32px;">⚠️</span><br>
                        Error al generar el código QR.<br>
                        Por favor, recarga la página.
                    </p>
                `;
            }
        });
        
        // Función para actualizar la interfaz según el estado de conexión
        function updateWhatsAppStatus(isConnected) {
            if (isConnected) {
                connectionStatus.textContent = 'Conectado';
                connectionStatus.className = 'status-button connected';
                qrcodeContainer.style.display = 'none';
                connectionSuccess.style.display = 'block';
                
                // Redirigir automáticamente después de 3 segundos
                setTimeout(() => {
                    window.location.href = '/chat';
                }, 3000);
                
                // Mostrar cuenta regresiva
                let seconds = 3;
                const countdownInterval = setInterval(() => {
                    seconds--;
                    document.querySelector('#connection-success p').innerHTML = 
                        `Tu WhatsApp está ahora conectado a MateChat.<br>Redirigiendo en ${seconds} segundos...`;
                    
                    if (seconds <= 0) {
                        clearInterval(countdownInterval);
                    }
                }, 1000);
            } else {
                connectionStatus.textContent = 'Desconectado';
                connectionStatus.className = 'status-button disconnected';
                qrcodeContainer.style.display = 'block';
                connectionSuccess.style.display = 'none';
            }
        }

        // Comprobar estado inicial
        fetch('/api/whatsapp-status')
            .then(response => response.json())
            .then(data => {
                console.log("Estado inicial de WhatsApp:", data);
                if (data.isConnected) {
                    updateWhatsAppStatus(true);
                }
            })
            .catch(error => console.error('Error al obtener el estado de WhatsApp:', error));
            
        // Hacer que el botón de estado sea clicable para reintentar conexión
        connectionStatus.addEventListener('click', function() {
            if (this.textContent === 'Desconectado') {
                // Solicitar nuevo código QR
                socket.emit('requestQR');
                
                // Mostrar mensaje de espera
                qrcodeElement.innerHTML = `
                    <p style="text-align: center;">
                        <span class="loading-spinner"></span> Solicitando nuevo código QR...
                    </p>
                `;
            }
        });
    </script>
</body>
</html>
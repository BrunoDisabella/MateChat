<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MateChat - WhatsApp Connection</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>MateChat</h1>
            <h2>WhatsApp Web Connection</h2>
        </header>
        
        <main>
            <div class="whatsapp-connect">
                <div id="whatsapp-status">
                    <p>Status: <span id="connection-status">Disconnected</span></p>
                </div>
                
                <div id="qrcode-container">
                    <h3>Scan the QR code with WhatsApp to connect</h3>
                    <div id="qrcode">
                        <p>Loading QR code...</p>
                    </div>
                    <p class="instructions">
                        1. Open WhatsApp on your phone<br>
                        2. Tap Menu or Settings and select WhatsApp Web<br>
                        3. Point your phone to this screen to capture the code
                    </p>
                </div>
                
                <div id="connection-success" style="display: none;">
                    <h3>WhatsApp Connected!</h3>
                    <p>Your WhatsApp is now connected to MateChat.</p>
                    <a href="/chat" class="button">Go to Chat Interface</a>
                </div>
            </div>
        </main>
        
        <footer>
            <p>&copy; 2025 MateChat - WhatsApp Integration</p>
        </footer>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const qrcodeElement = document.getElementById('qrcode');
        const connectionStatus = document.getElementById('connection-status');
        const qrcodeContainer = document.getElementById('qrcode-container');
        const connectionSuccess = document.getElementById('connection-success');

        // Manejar la recepción del código QR
        socket.on('qrCode', (qrCodeDataUrl) => {
            console.log("Código QR recibido del servidor");
            // Usar una imagen con estilos especiales
            qrcodeElement.innerHTML = `
                <div style="display: flex; justify-content: center; align-items: center; margin: 20px 0;">
                    <img src="${qrCodeDataUrl}" alt="WhatsApp QR Code" style="max-width:250px; border: 8px solid white; box-shadow: 0 0 10px rgba(0,0,0,0.2);">
                </div>
                <p style="text-align: center; font-weight: bold; color: #075e54;">Escanea este código con WhatsApp Business</p>
            `;
        });
        
        // Solicitar explícitamente el código QR al conectar
        socket.on('connect', () => {
            console.log("Socket conectado, solicitando estado actual");
            // El servidor enviará el QR si está disponible
        });

        socket.on('whatsappStatus', (data) => {
            if (data.status === 'connected') {
                connectionStatus.textContent = 'Connected';
                connectionStatus.className = 'connected';
                qrcodeContainer.style.display = 'none';
                connectionSuccess.style.display = 'block';
            } else {
                connectionStatus.textContent = 'Disconnected';
                connectionStatus.className = 'disconnected';
                qrcodeContainer.style.display = 'block';
                connectionSuccess.style.display = 'none';
            }
        });

        // Check initial status
        fetch('/api/whatsapp-status')
            .then(response => response.json())
            .then(data => {
                if (data.isConnected) {
                    connectionStatus.textContent = 'Connected';
                    connectionStatus.className = 'connected';
                    qrcodeContainer.style.display = 'none';
                    connectionSuccess.style.display = 'block';
                }
            })
            .catch(error => console.error('Error fetching WhatsApp status:', error));
    </script>
</body>
</html>